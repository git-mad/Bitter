<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activity.NavigationActivity">

    <include layout="@layout/fragment_sorted_posts"
             android:id="@+id/sorted_feed_fragment"
             android:layout_height="match_parent"
             android:layout_width="match_parent"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/camera_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/gallery_fab"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:src="@drawable/camera_icon"
            app:fabSize="mini"/>


    <android.support.design.widget.FloatingActionButton
            android:id="@+id/gallery_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_fab"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:src="@drawable/gallery_icon"
            app:fabSize="mini"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/text_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/create_post_button"
            android:icon="@drawable/new_post_icon"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_menu_edit"
            app:fabSize="mini"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/create_post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:src="@drawable/new_post_icon"/>

</RelativeLayout>

